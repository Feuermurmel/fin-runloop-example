{
    "compilerOptions": {
        "outDir": "out",
        "rootDir": "src",
        "target": "esnext",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["lua-types/5.4"],
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "tstl": {
        "luaTarget": "5.4",
        "sourceMapTraceback": true
    }
}
